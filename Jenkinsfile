pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "ðŸ“¦ Checking out repository"
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "ðŸ”§ Compiling Project"
                sh 'gcc jenkins-hello.c -o hello.out'
            }
        }

        stage('Run') {
            steps {
                echo "ðŸš€ Running compiled program..."
                sh './hello.out'
            }
        }
    }
}
